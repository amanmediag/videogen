generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(cuid())
  name      String
  idea      String
  status    String   @default("draft") // draft, scripting, storyboarding, generating, complete
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages           ChatMessage[]
  scripts            Script[]
  storyboardSections StoryboardSection[]
  characters         Character[]
  tasks              Task[]
}

model ChatMessage {
  id        String   @id @default(cuid())
  projectId String
  role      String // system, user, assistant
  content   String
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Script {
  id        String   @id @default(cuid())
  projectId String
  content   String
  version   Int      @default(1)
  isFinal   Boolean  @default(false)
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model StoryboardSection {
  id            String   @id @default(cuid())
  projectId     String
  sectionNumber Int
  description   String
  prompt        String
  imageUrl      String?
  videoUrl      String?
  localVideoPath String?
  taskId        String?
  status        String   @default("pending") // pending, generating, ready, approved
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Character {
  id             String   @id @default(cuid())
  projectId      String
  kieCharacterId String?
  username       String
  prompt         String
  originTaskId   String
  createdAt      DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Task {
  id        String   @id @default(cuid())
  projectId String
  kieTaskId String   @unique
  model     String
  status    String   @default("waiting") // waiting, queuing, generating, success, fail
  resultUrl String?
  localPath String?
  progress  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
